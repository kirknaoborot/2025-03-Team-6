{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5003"
  },
  "Routes": [
    {
      "UpstreamHttpMethod": [ "POST" ],
      "UpstreamPathTemplate": "/auth/login",
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 56468
        }
      ]
      /* без авторизации */
    },
    {
      "UpstreamHttpMethod": [ "POST" ],
      "UpstreamPathTemplate": "/auth/refresh",
      "DownstreamPathTemplate": "/api/auth/refresh-token",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 56468
        }
      ]
      /* без авторизации */
    },
    {
      "UpstreamHttpMethod": [ "POST" ],
      "UpstreamPathTemplate": "/user/create",
      "DownstreamPathTemplate": "/api/user/user",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 56468
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtAuth",
        "AllowedScopes": []
      },
      "ClaimsToHeaders": [
        {
          "Key": "X-User-Id",
          "Value": "claims['id'] > value"
        },
        {
          "Key": "X-User-Email",
          "Value": "claims['email'] > value"
        },
        {
          "Key": "X-User-Role",
          "Value": "claims['role'] > value"
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/conversation/conversations",
      "DownstreamPathTemplate": "/api/conversation/conversations",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5235
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtAuth",
        "AllowedScopes": []
      },
      "ClaimsToHeaders": [
        {
          "Key": "X-User-Id",
          "Value": "claims['id'] > value"
        },
        {
          "Key": "X-User-Email",
          "Value": "claims['email'] > value"
        },
        {
          "Key": "X-User-Role",
          "Value": "claims['role'] > value"
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/conversation/conversation",
      "DownstreamPathTemplate": "/api/conversation/conversation",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5235
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtAuth",
        "AllowedScopes": []
      },
      "ClaimsToHeaders": [
        {
          "Key": "X-User-Id",
          "Value": "claims['id'] > value"
        },
        {
          "Key": "X-User-Email",
          "Value": "claims['email'] > value"
        },
        {
          "Key": "X-User-Role",
          "Value": "claims['role'] > value"
        }
      ]
    }
  ]
}