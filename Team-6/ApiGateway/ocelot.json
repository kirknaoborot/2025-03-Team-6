      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 56468
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtAuth",
        "AllowedScopes": []
      },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[id] > value",
        "X-User-Email": "Claims[email] > value",
        "X-User-Role": "Claims[role] > value"
      }
    },
